rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Article images
    match /articles/{articleId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Article audio files
    match /audio/{articleId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User profile photos
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Ad media
    match /ads/{adId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
